{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": ".",
        "outDir": "dist",
    },
    "include": ["app/javascript/src/**/*", "app/javascript/tests/**/*"],
    "exclude": ["node_modules", "dist"]
}
